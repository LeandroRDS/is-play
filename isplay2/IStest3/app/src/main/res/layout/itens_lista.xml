<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/TvCabesalho"
    tools:showIn="@layout/activity_main"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/TvCabesalho"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TvQuantidadeRepeticao"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@color/TvCabesalho"
            android:text="10"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/TvIndicador"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:background="@color/TvCabesalho"
            android:text="R"
            android:gravity="left"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:textSize="24dp"
            android:layout_toEndOf="@id/TvQuantidadeRepeticao"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/TvNumeroASertear"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@color/TvCabesalho"
            android:text="23"
            android:gravity="left"
            android:textColor="@color/black"
            android:layout_marginStart="60dp"
            android:textSize="24dp"
            android:layout_toEndOf="@id/TvIndicador"
            android:textStyle="bold"/>

    </RelativeLayout>
    
</androidx.cardview.widget.CardView>